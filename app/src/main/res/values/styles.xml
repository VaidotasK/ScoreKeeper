<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextCustom" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/paddingOrMargin_S</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/textSize_L</item>
        <item name="android:background">@color/colorEditText</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="EditTextCustomLand" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/paddingOrMargin_S</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/textSize_L</item>
        <item name="android:background">@color/colorEditText</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="Button_ball" parent="AppTheme">
        <item name="android:layout_width">@dimen/heightOrWidth_L</item>
        <item name="android:layout_height">@dimen/heightOrWidth_L</item>
        <item name="android:layout_marginBottom">@dimen/paddingOrMargin_XS</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextViewScore" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/paddingOrMargin_S</item>
        <item name="android:textSize">@dimen/textSize_XL</item>
    </style>

    <style name="TextViewScoreLand" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/paddingOrMargin_S</item>
        <item name="android:textSize">@dimen/textSize_XL</item>
    </style>

    <style name="TextViewFault" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorTextViewFaultBackground</item>
        <item name="android:textSize">@dimen/textSize_L</item>
        <item name="android:layout_marginBottom">@dimen/paddingOrMargin_M</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Button_fault" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/heightOrWidth_XL</item>
        <item name="android:layout_marginBottom">@dimen/paddingOrMargin_XS</item>
        <item name="android:textSize">@dimen/textSize_M</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorButtonFaultBackground</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
