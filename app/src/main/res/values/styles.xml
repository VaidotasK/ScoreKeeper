<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextCustom" parent="AppTheme">
    <!-- Customize your theme here. -->
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textSize">20sp</item>
    <item name="android:background">#64DD17</item>
    <item name="android:inputType">textCapWords</item>
</style>

    <style name="EditTextCustomLand" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#64DD17</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="Button_ball" parent="AppTheme">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextViewScore" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="TextViewScoreLand" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="TextViewFault" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#80000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Button_fault" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#90A4AE</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
